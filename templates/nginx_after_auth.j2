server {
    listen 80;
    listen [::]:80;

    server_name {{ letsencrypt_auth_domain_name }};

    location /.well-known {
        alias /var/lib/dehydrated;
    }

    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    ssl on;
    ssl_certificate /var/lib/dehydrated/certs/{{ letsencrypt_auth_domain_name }}/fullchain.pem;
    ssl_certificate_key /var/lib/dehydrated/certs/{{ letsencrypt_auth_domain_name }}/privkey.pem;
    ssl_session_timeout 5m;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers 'EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH';
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_dhparam /etc/ssl/certs/dhparam.pem;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    server_name {{ letsencrypt_auth_domain_name }};

    root /srv/www/{{ letsencrypt_auth_domain_name }};
    index index.php index.html index.htm;

    location / {
        try_files $uri $uri/ =404;
    }

    location /.well-known {
        alias /var/lib/dehydrated;
    }
}
